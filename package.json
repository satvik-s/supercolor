{
  "name": "nodejs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for nodejs and typescript project",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "$(npm bin)/tsc",
    "static-analysis": "$(npm bin)/eslint .",
    "prettier": "$(npm bin)/prettier --write .",
    "check-updates": "$(npm bin)/ncu",
    "make-updates": "$(npm bin)/ncu -u",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satvik-s/nodejs-typescript-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "eslint",
    "prettier"
  ],
  "author": "Satvik Shukla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satvik-s/nodejs-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/satvik-s/nodejs-typescript-boilerplate#readme",
  "devDependencies": {
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "npm-check-updates": "12.5.8",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run prettier"
  }
}
